doctype html
html(lang="en")
    head
        title Profile Page
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        style.
            body {
                font-family: sans-serif;
                background: #f2f2f2;
                padding: 2rem;
            }
            .card {
                max-width: 400px;
                margin: auto;
                background: white;
                padding: 2rem;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }
            h1 {
                text-align: center;
                margin-bottom: 1rem;
                color: #333;
            }
            p {
                font-size: 1.1rem;
                margin: 0.5rem 0;
            }
    body
        .card
            h1 Welcome, #{user.username}!
            p 
                strong User ID: 
                | #{user.userId}
            p 
                strong Email (optional): 
                | #{user.email || 'N/A'}
